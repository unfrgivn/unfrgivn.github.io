      <span>unfrgivn</span>
    </a>

    <nav class="hidden md:flex items-center gap-8">
      {navItems.map(item => (
        <a href={item.href} class="text-sm font-medium text-muted hover:text-text transition-colors">
          {item.label}
        </a>
      ))}
      
      <div class="flex items-center gap-4 border-l border-border/40 pl-6">
        {/* Add socials here if needed */}
      </div>
    </nav>

    {/* Mobile Menu Button (Simple version for now) */}
    <a href="/projects" class="md:hidden text-sm font-medium text-text bg-surface-2 px-3 py-1.5 rounded-full">
      View Work
    </a>
  </div>
</header>